user www-data;
worker_processes auto;
pid /run/nginx.pid;
error_log /var/log/nginx/error.log;
include /etc/nginx/modules-enabled/*.conf;

events {
        worker_connections 768;
        # multi_accept on;
}

http {

server {
    listen 80;
    server_name peakledge.com www.peakledge.com;

    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    location / {
        proxy_pass http://10.10.1.131:80;
        proxy_set_header Host $host;
    }
}

server {
    listen 443 ssl;
    server_name peakledge.com www.peakledge.com;

    ssl_certificate /etc/letsencrypt/live/peakledge.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/peakledge.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers EECDH+CHACHA20:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Port $server_port;

    location / {
        proxy_pass https://10.10.1.131:443;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

}

}


