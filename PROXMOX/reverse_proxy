user www-data;
worker_processes auto;
pid /run/nginx.pid;
error_log /var/log/nginx/error.log;
include /etc/nginx/modules-enabled/*.conf;

events {
        worker_connections 768;
        # multi_accept on;
}

http {

client_max_body_size 10M;
limit_conn_zone $binary_remote_addr zone=addr:10m;
limit_conn addr 10;
limit_req_zone $binary_remote_addr zone=req:10m rate=5r/s;

set_real_ip_from 0.0.0.0/0;

real_ip_header X-Real-IP;
real_ip_recursive on;

log_format main '$remote_addr - $remote_user [$time_local] '
                '"$request" $status $body_bytes_sent '
                '"$http_referer" "$http_user_agent" '
                'X-Real-IP: $remote_addr '
                'X-Forwarded-For: $proxy_add_x_forwarded_for';

access_log /var/log/nginx/access.log main;
error_log /var/log/nginx/error.log debug;



server {
    listen 80;
    server_name peakledge.com www.peakledge.com;

    location / {
        proxy_pass http://10.10.1.131:80;

        # Forward headers
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

server {
    listen 443 ssl;
    server_name peakledge.com www.peakledge.com;

    ssl_certificate /etc/letsencrypt/live/peakledge.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/peakledge.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers EECDH+CHACHA20:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;

    location / {
        proxy_pass https://10.10.1.131:443;
        proxy_http_version 1.1;

        # Forward headers
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;

    }

}

}
